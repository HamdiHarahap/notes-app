<div class="mt-4 flex justify-start flex-wrap gap-8">
	<% notes.forEach(note => { %>
	<div
		class="w-[19.5rem] bg-white rounded-lg flex flex-col px-4 py-2 max-[520px]:w-full"
	>
		<div class="flex justify-between items-center w-full">
			<% if (note.category === 'Home') { %>
			<p class="text-xs text-white font-semibold bg-purple-400 p-2 rounded-xl">
				<%= note.category %>
			</p>
			<% } else if(note.category === 'Personal') { %>
			<p class="text-xs text-white font-semibold bg-green-400 p-2 rounded-xl">
				<%= note.category %>
			</p>
			<% } else { %>
			<p class="text-xs text-white font-semibold bg-yellow-400 p-2 rounded-xl">
				<%= note.category %>
			</p>
			<% } %>
			<div class="flex gap-2">
				<a href="/note/<%= note.id %>" class="text-yellow-600">
					<i data-feather="edit-2" class="w-4"></i>
				</a>
				<form
					action="/note/<%= note.id %>?_method=DELETE"
					method="POST"
					onsubmit="return confirm('Are you sure you want to delete this note?');"
				>
					<button type="submit" class="text-red-500">
						<i data-feather="trash-2" class="w-4"></i>
					</button>
				</form>
			</div>
		</div>
		<div class="flex flex-col justify-between h-full">
			<div>
				<h3 class="font-semibold mt-2"><%= note.title %></h3>
				<p class="mt-1"><%= note.body %></p>
			</div>
			<p class="mt-3 text-right text-gray-400 text"><%= note.date %></p>
		</div>
	</div>
	<% }) %>
</div>
